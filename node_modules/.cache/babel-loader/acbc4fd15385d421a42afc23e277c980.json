minder.vue"],"sourcesContent":["<template>\r\n  <div class=\"the-reminder-wrapper\">\r\n    <list-sets>\r\n      <h3>提醒</h3>\r\n      <li v-for=\"(reminder, index) in reminders\" :key=\"index\">\r\n        <input class=\"radio\" type=\"radio\" @click=\"alterSelected(index)\" />{{\r\n          reminder.content\r\n        }}\r\n      </li>\r\n      <form @submit.prevent v-if=\"formIsVisible\">\r\n        <input class=\"radio\" type=\"radio\" @click=\"alterSelected(index)\" />\r\n        <input v-model=\"reminder.content\" />\r\n      </form>\r\n      <div>\r\n        <button-sets v-if=\"formIsVisible\" @click=\"addReminder\"\r\n          >确认</button-sets\r\n        >\r\n\r\n        <button-sets v-else @click=\"alterFormVisibility\">添加</button-sets>\r\n\r\n        <button-sets @click=\"deleteReminder\">删除</button-sets>\r\n      </div>\r\n    </list-sets>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      formIsVisible: false,\r\n      reminders: [\r\n        {\r\n          selected: false,\r\n          content: \"带希希看医生\",\r\n        },\r\n        {\r\n          selected: false,\r\n          content: \"带壹壹绝育\",\r\n        },\r\n      ],\r\n      reminder: {\r\n        selected: false,\r\n        content: null,\r\n      },\r\n    };\r\n  },\r\n  methods: {\r\n    alterFormVisibility() {\r\n      this.formIsVisible = true;\r\n    },\r\n    alterSelected(index) {\r\n      if (this.reminders[index].selected === true) {\r\n        this.reminders[index].selected = false;\r\n      } else {\r\n        this.reminders[index].selected = true;\r\n      }\r\n      console.log(this.reminders[index]);\r\n    },\r\n    addReminder() {\r\n      if (this.reminder.content) {\r\n        this.reminders.push(this.reminder);\r\n        this.formIsVisible = false;\r\n      } else {\r\n        alert(\"提醒内容不能为空！\");\r\n      }\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.the-reminder-wrapper {\r\n  width: 300px;\r\n  position: